{
  "lerna": "6",
  "conventionalCommits": true,
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "packages": [
    "packages/*"
  ],
	"version": "independent",
  "registry": "https://registry.npmjs.org",
	"command": {
		"version": {
			"message": "chore(release): publish"
		},
		"publish": {
      "allowBranch": "main",
      "message": "chore(release): publish"
    }
	},
	"useWorkspaces": true
}
